{
    "compilerOptions": {
      "allowJs": true,
      "outDir": "./dist/",
      "sourceMap": true,
      "noImplicitAny": true,
      "module": "commonjs",
      "target": "esnext",
      "jsx": "react",
      "lib": ["dom", "es2015", "es2017"],
      "baseUrl": ".",
      "allowSyntheticDefaultImports": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "removeComments": false,
      "preserveConstEnums": true,
      "skipLibCheck": true,
      "noEmit": true,
      "paths": {
        "src/*": ["src/*"],
        "~/*": ["./src/*"]
      },
      "types": ["node", "jest", "@emotion/core"]
    },
    "include": ["./src/**/*", "theme.ts"]
  }
  